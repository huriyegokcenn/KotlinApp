<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#D1DAD8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="453dp"
        android:layout_height="291dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="O"
        android:textSize="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="450dp"
        android:layout_height="600dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonparantexsol"
                android:layout_width="115dp"
                android:layout_height="120dp"
                android:backgroundTint="#5D7D76"
                android:text="("
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonparantezsag"
                android:layout_width="115dp"
                android:layout_height="120dp"
                android:backgroundTint="#5D7D76"
                android:text=")"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttondelete"
                android:layout_width="115dp"
                android:layout_height="117dp"
                android:backgroundTint="#5D7D76"
                android:text="DELETE"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/logo" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonyedi"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="7"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonsekiz"
                android:layout_width="69dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="8"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttondokuz"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="9"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonçarpma"
                android:layout_width="105dp"
                android:layout_height="120dp"
                android:backgroundTint="#5D7D76"
                android:text="X"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttondört"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="4"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonbeş"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="5"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonaltı"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="6"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonçıkarma"
                android:layout_width="105dp"
                android:layout_height="120dp"
                android:backgroundTint="#5D7D76"
                android:text="-"
                android:textSize="40dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonbir"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:backgroundTint="#8CA29D"
                android:text="1"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttoniki"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonüç"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="3"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttontoplama"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:backgroundTint="#5D7D76"
                android:text="+"
                android:textSize="40dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="28dp">

            <Button
                android:id="@+id/buttonvirgül"
                android:layout_width="98dp"
                android:layout_height="120dp"
                android:backgroundTint="#5D7D76"
                android:text=","
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonsıfır"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:backgroundTint="#8CA29D"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttonbölme"
                android:layout_width="115dp"
                android:layout_height="120dp"
                android:backgroundTint="#5D7D76"
                android:text="÷"
                android:textSize="40dp" />

            <Button
                android:id="@+id/buttoneşittir"
                android:layout_width="105dp"
                android:layout_height="120dp"
                android:backgroundTint="#233D3D"
                android:text="="
                android:textSize="40dp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>